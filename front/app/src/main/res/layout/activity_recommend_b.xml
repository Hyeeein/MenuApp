<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="닉네임"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="님을 위한"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_recommend2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="메뉴를 추천해 드릴게요!"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            android:background="@drawable/recommend_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_recommend3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="우리의 예산은"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center|right"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <Spinner
                    android:id="@+id/spinner_price"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:entries="@array/가격"
                    android:theme="@style/SpinnerDivideStyle" />

                <TextView
                    android:id="@+id/txt_recommend4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:text="원"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_recommend5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="오늘의 날씨는 ?"
                    android:textSize="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btn_sunny"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="맑음"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_cloud"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:text="구름"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btn_rain"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:text="비"
                        android:fontFamily="@font/font"
                        android:textSize="20dp"
                        android:textColor="#747474"
                        android:background="@drawable/recommed_btn_border"
                        app:backgroundTint="@null"/>

                    <Button
                        android:id="@+id/btn_snow"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:text="눈"
                        android:fontFamily="@font/font"
                        android:textSize="20dp"
                        android:textColor="#747474"
                        android:background="@drawable/recommed_btn_border"
                        app:backgroundTint="@null" />

                    <Button
                        android:id="@+id/btn_dust"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:text="황사"
                        android:fontFamily="@font/font"
                        android:textSize="20dp"
                        android:textColor="#747474"
                        android:background="@drawable/recommed_btn_border"
                        app:backgroundTint="@null" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txt_recommend6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="지금 내 기분은 !"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btn_hungry"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="배고픔"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_soso"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:text="적당"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btn_good"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="기쁨"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null"/>

                <Button
                    android:id="@+id/btn_tired"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:text="피곤"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btn_stress"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:text="스트레스"
                    android:fontFamily="@font/font"
                    android:textSize="20dp"
                    android:textColor="#747474"
                    android:background="@drawable/recommed_btn_border"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_recommend"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="메뉴 추천받기"
            android:fontFamily="@font/font"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="#faf4c0">

        </Button>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/home_48px" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:scaleType="fitCenter"
            android:layout_marginTop="116dp"
            android:src="@drawable/bappool_g" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>