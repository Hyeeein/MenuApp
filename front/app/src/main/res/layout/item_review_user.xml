<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_item_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rname_review_user"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="양평해장국 인천대점"
                android:textColor="@color/black"
                android:gravity="bottom"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/btn_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="bottom"
                    android:src="@drawable/cancel_24px" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_review_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"
                android:text="내장탕"
                android:gravity="bottom"
                android:textSize="21dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:id="@+id/date_review_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginRight="15dp"
                    android:text="2023-03-15"
                    android:textSize="19dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_review_show3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="평점"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <RatingBar
                android:id="@+id/rating_user"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_review_user"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/txt_review_user"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textSize="20dp"
            android:text="최고예요!"
            android:background="@drawable/txt_border" />

    </LinearLayout>
</LinearLayout>