<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_item_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_review_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="울트라캡숑"
                android:gravity="bottom"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/txt_review_show2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="님의 리뷰"
                android:textColor="@color/black"
                android:gravity="bottom"
                android:textSize="21dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_review_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:text="내장탕"
                android:textColor="@color/black"
                android:gravity="bottom"
                android:textSize="21dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/date_review_show"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginRight="24dp"
                    android:text="2023.03.15"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_review_show3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="평점"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <RatingBar
                android:id="@+id/rating_show"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5" />

        </LinearLayout>

            <ImageView
                android:id="@+id/img_review_show"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="200dp" />

        <TextView
            android:id="@+id/txt_review_show4"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textSize="20dp"
            android:text="최고예요!"
            android:background="@drawable/txt_border" />

    </LinearLayout>
</LinearLayout>