<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendResActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="144dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/name_recommend_res"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="닉네임"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_recommend_res"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="님에게 추천하는 메뉴는"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/menu_recommend_res"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="싸이버거"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_recommend_res2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="입니다"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="240dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_recommend_res"
                android:layout_width="180dp"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_recommend_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="주변 음식점"
                    android:textSize="13sp"
                    android:textColor="#584B00"
                    android:textStyle="bold"
                    android:backgroundTint="#faf4c0">

                </Button>

                <Button
                    android:id="@+id/btn_recommend_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="메뉴 확정"
                    android:textSize="13sp"
                    android:textColor="#584B00"
                    android:textStyle="bold"
                    android:backgroundTint="#faf4c0">

                </Button>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_recommend_re"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="다른 메뉴 추천받기"
            android:textColor="#584B00"
            android:textStyle="bold"
            android:backgroundTint="#faf4c0">

        </Button>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>